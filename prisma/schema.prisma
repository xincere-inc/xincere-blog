generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Gender {
  male
  female
  other
}

// user role
enum Role {
  user
  admin
}

model User {
  id                      String   @id @default(uuid())
  firstName               String
  lastName                String?
  username                String   @unique
  email                   String   @unique
  address                 String?  @default("")
  gender                  Gender? 
  role                    Role     @default(user) // User role, default is user
  country                 String?
  password                String
  phone                   String?  @unique  @default("")
  emailVerified           Boolean  @default(false) // Email verification status
  emailVerificationToken  String?  @unique         // Email verification token
  resetPasswordToken      String?  @unique         // Reset password token
  resetPasswordMailCount  Int      @default(0)     // Reset password mail count in one hour only three mail can be sent 
  resetPasswordMailTime   DateTime?                // Reset password mail time                
  createdAt               DateTime @default(now())
  updatedAt               DateTime?
}